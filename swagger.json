  "components": {
    "schemas": {
      "Client": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "36f39f08-3ad2-44a7-b554-031b245c9117"
          },
          "avatar": {
            "type": "string",
            "nullable": true,
            "default": null,
            "example": "https://cloudflare-ipfs.com/ipfs/Qmd3W5DuhgHirLHGVixi6V76LhCkZUz6pnFt5AJBiyvHye/avatar/390.jpg"
          },
          "phone": {
            "type": "string",
            "example": "+7 (925) 549-94-33"
          },
          "email": {
            "type": "string",
            "default": null,
            "example": "Melyssa31@mail.ru"
          },
          "firstname": {
            "type": "string",
            "example": "Brandi"
          },
          "lastname": {
            "type": "string",
            "example": "Ferry"
          },
          "birth": {
            "type": "string",
            "format": "date",
            "example": "2022-12-24T13:45:00.000Z"
          },
          "age": {
            "type": "integer",
            "example": 24
          },
          "registeredAt": {
            "type": "string",
            "format": "date",
            "example": "2022-12-24T13:45:00.000Z"
          },
          "about": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "example": ["str1", "str2", "str3"],
            "default": []
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": [],
            "example": ["tag1", "tag2", "tag3"]
          },
          "sex": {
            "type": "integer",
            "example": 1,
            "minimum": 0,
            "maximum": 1
          },
          "rating": {
            "type": "integer",
            "example": 4,
            "minimum": 0,
            "maximum": 5,
            "default": 0
          },
          "finanses": {
            "type": "object",
            "properties": {
              "banace": {
                "type": "integer",
                "example": 3000,
                "default": 0
              },
              "average": {
                "type": "integer",
                "example": 500,
                "default": 0
              },
              "bonus": {
                "type": "integer",
                "example": 300,
                "default": 0
              },
              "wasted": {
                "type": "integer",
                "example": 6000,
                "default": 0
              }
            }
          },
          "appointments": {
            "type": "object",
            "properties": {
              "count": {
                "type": "integer",
                "example": 10
              },
              "frequency": {
                "type": "string",
                "example": "6 раз в месяц",
                "description": "Сейчас это статичная строка, как это считать - не представляю"
              },
              "last": {
                "type": "string",
                "format": "date",
                "example": "2023-04-28T10:45:00.000Z"
              },
              "next": {
                "type": "string",
                "format": "date",
                "example": "2023-05-26T04:30:00.000Z"
              },
              "missed": {
                "type": "integer",
                "example": 3
              }
            },
            "default": 0
          }
        }
      },
      "ShortClient": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "36f39f08-3ad2-44a7-b554-031b245c9117"
          },
          "avatar": {
            "type": "string",
            "nullable": true,
            "default": null,
            "example": "https://cloudflare-ipfs.com/ipfs/Qmd3W5DuhgHirLHGVixi6V76LhCkZUz6pnFt5AJBiyvHye/avatar/390.jpg"
          },
          "phone": {
            "type": "string",
