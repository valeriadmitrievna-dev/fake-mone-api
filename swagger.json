    "/masters": {
      "get": {
        "tags": ["master"],
        "summary": "Получить массив мастеров",
        "description": "Получить массив мастеров по поисковому запросу, категории, номеру страницы и количеству мастеров на одной странице, или без параметров в принципе",
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "description": "Текст из поля поиска",
            "required": false,
            "schema": {
              "type": "string",
              "example": "Укладка"
            }
          },
          {
            "name": "category",
            "in": "query",
            "description": "Ключ категории",
            "required": false,
            "schema": {
              "type": "integer",
              "example": 3
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Номер страницы",
            "required": false,
            "schema": {
              "type": "integer",
              "example": 1
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Количество мастеров на одной странице",
            "required": false,
            "schema": {
              "type": "integer",
              "example": 3
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ShortMaster"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/masters/page": {
      "get": {
        "tags": ["master"],
        "summary": "Получить номер страницы мастера",
        "description": "Получить номер страницы, на которой находится мастер",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "description": "Id мастера",
            "required": true,
            "schema": {
              "type": "string",
              "example": "dc699016-92ef-41f3-a014-ea9964e721e9"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Количество мастеров на одной странице",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 6
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
