              "example": "d4169cbc-e1d1-4adf-a6e8-ee0f895b30d5"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "master": {
                        "type": "string",
                        "example": "4e61f863-63e1-4653-b507-4e581346436f"
                      },
