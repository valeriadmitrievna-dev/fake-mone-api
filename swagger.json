              "application/json": {
                "schema": {
                  "type": "integer",
                  "example": 4
                }
              }
            }
          },
          "400": {
            "description": "Не предоставлен master.id ИЛИ Не предоставлено количество отображаемых колонок"
          },
          "404": {
            "description": "Мастер с таким ID не найден"
          }
        }
      }
    },
