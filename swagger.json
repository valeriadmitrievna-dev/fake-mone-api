  "paths": {
    "/services": {
      "get": {
        "tags": ["service"],
        "summary": "Получить массив услуг",
        "description": "Получить массив услуг по поисковому запросу, категориям, id или без параметров в принципе",
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "description": "Текст из поля поиска",
            "required": false,
            "schema": {
              "type": "string",
              "example": "Укладка"
            }
          },
          {
            "name": "categories",
            "in": "query",
            "description": "Массив ключей категорий",
            "required": false,
            "explode": true,
            "schema": {
              "type": "array",
              "items": { "type": "integer" },
              "example": [1, 3]
            }
          },
          {
            "name": "ids",
            "in": "query",
            "description": "Массив id услуг",
            "required": false,
            "explode": true,
            "schema": {
              "type": "array",
              "items": { "type": "string" },
              "example": [
                "4e61f863-63e1-4653-b507-4e581346436f",
                "af12f9c0-9b63-4ba1-8079-8fe1cc941595"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ShortService"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/services/{id}": {
      "get": {
        "tags": ["service"],
        "summary": "Получить услугу по id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "example": "36f39f08-3ad2-44a7-b554-031b245c9117"
