              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Service"
                }
              }
            }
          },
          "400": {
            "description": "Не предоставлен service.id"
          },
          "404": {
            "description": "Услуга с таким ID не найдена"
          }
        }
      }
    },
